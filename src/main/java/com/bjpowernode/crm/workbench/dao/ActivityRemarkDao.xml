<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.ActivityRemarkDao">

    <select id="getRemarkList" resultType="activityRemark">

        select * from tbl_activity_remark

    </select>

    <select id="deleteCount" resultType="int">

        select count(*)
        from tbl_activity_remark
        join tbl_activity a
        on a.id=activityId
        where activityId in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>

    </select>

    <delete id="deleteByIds">

        delete
        from tbl_activity_remark
        where activityId in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>

    </delete>

    <delete id="deleteRemark">

        delete
        from tbl_activity_remark
        where id=#{id}


    </delete>

    <insert id="insertRemark">

        insert into tbl_activity_remark
        (id,noteContent,createTime,createBy,editFlag,activityId)
        values
        (
        #{id},#{noteContent},#{createTime},#{createBy},#{editFlag},#{activityId}
        )

    </insert>

    <select id="selectById" resultType="activityRemark">
        select * from tbl_activity_remark where id=#{id}
    </select>

    <update id="updateRemark" parameterType="activityRemark">

        update tbl_activity_remark
        set
        noteContent=#{noteContent},editTime=#{editTime},editBy=#{editBy},editFlag=#{editFlag}
        where id=#{id}


    </update>

</mapper>


